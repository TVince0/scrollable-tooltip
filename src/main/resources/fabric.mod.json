{
  "schemaVersion": 1,
  "id": "scrollable_tooltip",
  "version": "${version}",

  "name": "Scrollable Tooltip",
  "description": "If the description of a tool doesn't fit on your screen vertically then just scroll up or down and you'll be able to read everything, without having to change the size of the GUI.",
  "authors": [
    "TVince0"
  ],
  "contact": {
    "homepage": "https://github.com/TVince0/scrollable-tooltip",
    "sources": "https://github.com/TVince0/scrollable-tooltip"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.tvince0.scrollable_tooltip.ScrollableTooltip"
    ],
    "client": [
      "net.tvince0.scrollable_tooltip.ScrollableTooltipClient"
    ]
  },
  "mixins": [
    "scrollable_tooltip.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
